{
  "name": "@tot/core",
  "version": "0.1.0",
  "description": "Core library for Tree of Thought framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
